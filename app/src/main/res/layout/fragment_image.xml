<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.image.ImageFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/select_image_image_view"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_margin="32dp"
            android:background="@android:drawable/ic_menu_gallery"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/remove_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_delete"
            app:layout_constraintBottom_toTopOf="@+id/select_image_image_view"
            app:layout_constraintEnd_toEndOf="@+id/select_image_image_view"
            app:layout_constraintStart_toEndOf="@+id/select_image_image_view"
            app:layout_constraintTop_toTopOf="@+id/select_image_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_select_image"
        style="@style/Widget.Material3.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="12dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="Select Image"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_upload_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="12dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/image_fragment_label"
        android:textSize="18sp"
        android:textStyle="bold"
        app:cornerRadius="5dp" />
</androidx.appcompat.widget.LinearLayoutCompat>